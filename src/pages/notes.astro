---
import BaseLayout from "../layouts/BaseLayout.astro";
import Recent from "../components/Recent.astro";
import PageHeader from "../components/PageHeader.astro";
import AllNotesListItem from "../components/AllNotesListItem.astro";
import Tags from "../components/Tags.astro";
const allNotes = await Astro.glob("./notes/*.md");
const pageTitle = "Notes from the garden";
---

<BaseLayout page="home">
  <PageHeader url="/" title={pageTitle} />
  <ul role="list">
    {
      allNotes.map((note) => (
        <AllNotesListItem
          url={note.url}
          title={note.frontmatter.title}
          pubDate={note.frontmatter.pubDate}
          tags={note.frontmatter.tags}
        />
      ))
    }
  </ul>
</BaseLayout>
<style>
  h3 {
    text-align: center;
  }

  a {
    text-decoration: solid underline 3px;
  }
</style>
