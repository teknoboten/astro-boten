---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";
const identity = {
  location: "Pacific NorthWest",
  firstName: "Serra",
  occupation: "Freelance Web Developer",
  hobbies: ["Computer Hacking", "Upcycling", "Mountain Biking", "Podcasts"],
};
const skills = ["Technical Support", "React", "REST APIs", "Troubleshooting"];
---

<BaseLayout pageTitle={pageTitle}>
  <p>
    Hi! My name is {identity.firstName}. I live in the {identity.location} and I
    work as a {identity.occupation}.
  </p>
  {
    identity.hobbies.length >= 2 && (
      <p>
        Some of my hobbies include: {identity.hobbies[0]}, {identity.hobbies[2]}
        , {identity.hobbies[3]}, and {identity.hobbies[1]}
      </p>
    )
  }
  <p>My skills include but are not limited to:</p>
  <ul>{skills.map((skill) => <li>{skill}</li>)}</ul>
</BaseLayout>
