---
import Section from "./Section.astro";
import Heading from "./Heading.astro";
import Tag from "./Tag.astro";
import Button from "../components/Button.astro";

const { page } = Astro.props;
---

<Section>
  <div class="header">
    {
      page === "home" && (
        <>
          <p class="sb">Serra Boten</p>
          <p class="bio">
            Hello, World! My name is Serra and this is my Digital Garden. Here
            you will find my writing about code, technology, projects and my
            post-social-media life as a parent and aging Millenial.ðŸª´ðŸŒº
          </p>
          <span class="buttons">
            <Button text="Read all the notes" url="/notes" />
            <Button text="RSS Feed?" url="/rss" />
          </span>
        </>
      )
    }

    {page === "notes" && <h3>Notes</h3>}
  </div>
</Section>

<style>
  .header {
    margin-top: 6em;
  }

  .buttons {
    display: flex;
    width: 60ch;
    justify-content: space-between;
    margin: 5rem auto;
  }

  .sb {
    font-weight: 900;
    font-size: 100px;
    width: 6ch;
    line-height: 0.75;
    margin: 1em auto 0.6em;
    text-align: center;
  }

  h3 {
    font-size: 100px;
    margin: 1.5em auto 0.6em;
    text-align: center;
  }

  .bio {
    text-align: justify;
    font-size: 1rem;
    font-family: var(--mono-font);
    max-width: 60ch;
    margin: 5rem auto;
    display: block;
  }
</style>
